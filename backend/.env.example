# Application Configuration
APP_NAME=domino-governance-backend
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=5000
WORKERS=4

# Database Configuration
# For local dev (SQLite)
DATABASE_URL=sqlite+aiosqlite:///./data/dgt.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/dgt_db

# Database Pool Settings (PostgreSQL only)
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# API Security
API_KEY=your-secret-api-key-here
CORS_ORIGINS=*

# Event Processing
MAX_BATCH_SIZE=1000
EVENT_RETENTION_DAYS=90
ENABLE_BACKGROUND_TASKS=True
CLEANUP_INTERVAL_HOURS=24

# Performance Tuning
QUERY_TIMEOUT_SECONDS=30
MAX_QUERY_RESULTS=10000

# Domino-specific (auto-configured on Domino platform)
FASTAPI_HOST=127.0.0.1
FASTAPI_PORT=8000
